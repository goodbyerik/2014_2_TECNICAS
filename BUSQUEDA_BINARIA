
def busquedabinaria(lista,ini,fin,n):
  med=(ini+fin)/2
  while lista[ini]<lista[fin]:
    med=(ini+fin)/2
    if lista[med]==n:
      return med
    else:
      if n<lista[med]:
        fin=med-1
      else:
        ini=med+1

#SI PRUEBO CON N= 3 O N=8 SALE MAL.. POR QUE???
def main():
  lista=[1,3,5,7,8]
  print busquedabinaria(lista,0,len(lista)-1,3)
    
if __name__=="__main__":
  main()
